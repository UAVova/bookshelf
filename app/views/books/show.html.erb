<div class="container col-xs-12">
  <div class="book-show col-xs-12">
    <div class="col-xs-3">
      <%= image_tag @book.image.url, class: "book-thumb center-block" %>
      <div class="book-buttons center-block">
        <button class="btn btn-success">Order</button>
        <button class="btn btn-warning ">Vote</button>
      </div>
    </div>
    <div class="col-xs-9 book-details">
      <h3>
      <%= link_to @book.name, @book %>
      </h3>
      <div style="padding: 0px;" class="col-xs-12">
        <p>Author: <%= link_to "author name", @book.author %></p>
        <p>Release Date: <%= @book.year %></p>
        <p>Description:</p>
        <p> <%= @book.description %> </p>
      </div>
    </div>
    <div class="col-xs-12">
      <h4 style="text-align: center;">Comments:</h4>
      <hr>
      <% if user_signed_in? %>
        <div class="col-xs-6 center-block" style="float:none">
          <button id="comment-form-button" class="btn btn-success btn-block">Add comment</button>
        </div>
        <div class="comment-form" style="display:none">
          <%= render 'comment_form' %>
        </div>
      <% end %>
      <div class="comments">
        <% @book.comments.each do |comment| %>
        <div class="comment col-xs-12">
          <div class="col-xs-2">
            <%= image_tag comment.user.avatar.url, class: "comment-author-avatar center-block" %>
          </div>
          <div class="col-xs-10">
            <p>Posted by: <%= comment.user.name %>, <%= comment.created_at.strftime("%d %b %H:%M") %></p>
            <p class="well comment-content"><%= comment.content %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>